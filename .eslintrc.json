{
    "env": {
      "browser": false,
      "commonjs": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "double"],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": false,
          "semi": true,
          "tabWidth": 2
        }
      ]
    }
  }
  